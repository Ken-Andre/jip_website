---
// Use Starlight's built-in i18n instead of custom implementation
const { t } = Astro.locals;
const currentLocale = Astro.locals.locale || 'fr';

// Footer links
const footerLinks = {
  about: [
    { href: '/vision', labelKey: 'footer.vision' },
    { href: '/fondateur', labelKey: 'footer.founder' },
    { href: '/programme', labelKey: 'footer.program' }
  ],
  participation: [
    { href: '/participation', labelKey: 'footer.participation' },
    { href: '/dons', labelKey: 'footer.donate' },
    { href: '/contact', labelKey: 'footer.contact' }
  ]
};

// Social media links
const socialLinks = [
  { name: 'Facebook', href: '#', icon: 'M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z' },
  { name: 'Instagram', href: '#', icon: 'M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01M7.5 21h9a3 3 0 003-3V6a3 3 0 00-3-3h-9a3 3 0 00-3 3v12a3 3 0 003 3z' },
  { name: 'YouTube', href: '#', icon: 'M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.33 29 29 0 00-.46-5.33zM9.75 15.02l5.75-3.27-5.75-3.27v6.54z' }
];
---

<footer class="bg-gray-900 text-white relative overflow-hidden border-t border-white/10">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary-600 via-secondary-500 to-primary-600"></div>
  <div class="absolute -top-24 -right-24 w-96 h-96 bg-primary-900/30 rounded-full blur-3xl pointer-events-none"></div>
  <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-secondary-900/20 rounded-full blur-3xl pointer-events-none"></div>

  <div class="container mx-auto px-4 py-16 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
      
      <!-- Brand & Description (4 cols) -->
      <div class="lg:col-span-4 space-y-6">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-600 to-primary-800 rounded-xl flex items-center justify-center shadow-lg">
            <span class="text-white font-serif font-bold text-xl">JIP</span>
          </div>
          <div>
            <h3 class="text-lg font-serif font-bold text-white tracking-wide leading-tight">
              {currentLocale === 'en' ? 'International Day' : 'Journée Internationale'}
              <span class="block text-primary-400">{currentLocale === 'en' ? 'of Pastors' : 'des Pasteurs'}</span>
            </h3>
          </div>
        </div>
        <p class="text-gray-400 leading-relaxed text-sm">
          {currentLocale === 'en'
            ? 'A celebration of pastoral ministry across Africa, bringing together spiritual leaders to honor their dedication and service to God\'s people.'
            : 'Une célébration du ministère pastoral à travers l\'Afrique, rassemblant les leaders spirituels pour honorer leur dévouement et leur service au peuple de Dieu.'
          }
        </p>
        
        <!-- Social Icons -->
        <div class="flex gap-4 pt-2">
          {socialLinks.map(link => (
            <a
              href={link.href}
              class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center hover:bg-primary-600 hover:text-white text-gray-400 transition-all duration-300 group"
              aria-label={`Follow us on ${link.name}`}
            >
              <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                <path d={link.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Links (2 cols each) -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6 relative inline-block">
          {t('footer.about')}
          <span class="absolute -bottom-2 left-0 w-8 h-1 bg-primary-500 rounded-full"></span>
        </h4>
        <ul class="space-y-3 text-sm">
          {footerLinks.about.map(link => (
            <li>
              <a href={`/${currentLocale}${link.href}`} class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2 group">
                <span class="w-1 h-1 bg-primary-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {t(link.labelKey)}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6 relative inline-block">
          {t('footer.participation')}
        </h4>
        <ul class="space-y-3 text-sm">
          {footerLinks.participation.map(link => (
            <li>
              <a href={`/${currentLocale}${link.href}`} class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2 group">
                <span class="w-1 h-1 bg-primary-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {t(link.labelKey)}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Additional Links -->
      <div class="lg:col-span-4">
        <h4 class="text-white font-bold mb-6 relative inline-block">
          {t('footer.links')}
          <span class="absolute -bottom-2 left-0 w-8 h-1 bg-primary-500 rounded-full"></span>
        </h4>
        <div class="grid grid-cols-2 gap-6">
          <div>
            <h5 class="text-gray-300 font-medium mb-3 text-sm uppercase tracking-wider">{t('footer.social')}</h5>
            <ul class="space-y-2 text-sm">
              <li><a href="#" class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2"><span class="w-1.5 h-1.5 bg-primary-500 rounded-full"></span> Facebook</a></li>
              <li><a href="#" class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2"><span class="w-1.5 h-1.5 bg-primary-500 rounded-full"></span> Instagram</a></li>
              <li><a href="#" class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2"><span class="w-1.5 h-1.5 bg-primary-500 rounded-full"></span> YouTube</a></li>
            </ul>
          </div>
          <div>
            <h5 class="text-gray-300 font-medium mb-3 text-sm uppercase tracking-wider">{t('common.resources')}</h5>
            <ul class="space-y-2 text-sm">
              <li><a href="/ressources" class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2"><span class="w-1.5 h-1.5 bg-primary-500 rounded-full"></span> {t('footer.resources')}</a></li>
              <li><a href="/faq" class="text-gray-400 hover:text-primary-400 transition-colors flex items-center gap-2"><span class="w-1.5 h-1.5 bg-primary-500 rounded-full"></span> FAQ</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="bg-black/40 py-6 border-t border-white/5 backdrop-blur-sm">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-500">
        <p>{t('footer.copyright')}</p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-white transition-colors">{t('footer.privacy')}</a>
          <a href="#" class="hover:text-white transition-colors">{t('footer.terms')}</a>
        </div>
      </div>
    </div>
  </div>
</footer>