---
import ThemeToggle from '../components/ThemeToggle.astro';
import LanguagePicker from '../components/LanguagePicker.astro';
import { Image } from 'astro:assets';
// import logoJip from '../assets/images/logo-jip.svg'; // Assuming this exists

const { title, description, lang = 'fr' } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-300">
    <header class="sticky top-0 z-50 w-full bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <div class="flex-shrink-0 flex items-center">
            <a href={`/${lang}/`} class="text-2xl font-serif font-bold text-primary-600 dark:text-primary-400">
              JIP
            </a>
          </div>

          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-8">
            <a href={`/${lang}/vision`} class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">Vision</a>
            <a href={`/${lang}/fondateur`} class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">Fondateur</a>
            <a href={`/${lang}/programme`} class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">Programme</a>
            <a href={`/${lang}/participation`} class="text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">Participation</a>
          </nav>

          <!-- Right Side: Lang + Theme + CTA -->
          <div class="flex items-center space-x-4">
            <LanguagePicker />
            <ThemeToggle />
            <a href={`/${lang}/dons`} class="hidden sm:inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              Faire un don
            </a>
          </div>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-50 dark:bg-gray-950 border-t border-gray-200 dark:border-gray-800 mt-12">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="col-span-1 md:col-span-2">
             <span class="text-2xl font-serif font-bold text-primary-600 dark:text-primary-400">JIP</span>
             <p class="mt-4 text-gray-500 dark:text-gray-400">
               Honorer ceux qui veillent sur nos âmes. Une journée internationale de célébration et de reconnaissance.
             </p>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Navigation</h3>
            <ul class="mt-4 space-y-4">
              <li><a href={`/${lang}/vision`} class="text-base text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Vision</a></li>
              <li><a href={`/${lang}/contact`} class="text-base text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Contact</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Légal</h3>
            <ul class="mt-4 space-y-4">
              <li><a href="#" class="text-base text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">Mentions légales</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 border-t border-gray-200 dark:border-gray-800 pt-8 md:flex md:items-center md:justify-between">
          <p class="text-base text-gray-400">&copy; 2025 Journée Internationale des Pasteurs. Tous droits réservés.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
